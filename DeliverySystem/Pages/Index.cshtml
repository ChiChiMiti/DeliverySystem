@page
@model DeliverySystem.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<h2>Fruits Available</h2>

<div class="row">
    @foreach (var item in Model.Fruits)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 fruit-card">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price: @item.Price.ToString("C")/kg</p>
                    <p class="card-text">Stock: @item.Stock</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="Purchase" asp-route-id="@item.Id" class="btn btn-primary btn-block">Purchase</a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-block">Login to Purchase</a>
                    }
                </div>
            </div>
        </div>
    }
</div>