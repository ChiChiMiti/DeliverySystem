@page
@model DeliverySystem.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete Fruit";
}

<h2>Delete Fruit</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Fruit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fruit.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fruit.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fruit.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fruit.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fruit.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fruit.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fruit.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Fruit.ImageUrl" alt="@Model.Fruit.Name" width="50" height="50" />
